{
  "root": true,
  "extends": [ "plugin:@wordpress/eslint-plugin/recommended" ],
  "globals": {
    "wp": true,
    "_sportsOddsTableData": true,
    "ajaxurl": false
  },
  "env": {
    "node": true,
    "es6": true,
    "amd": true,
    "browser": true,
    "jquery": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "impliedStrict": true,
      "objectLiteralDuplicateProperties": false
    },
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "rules": {
    "comma-dangle": ["error", "never"],
    "no-var": 1,
    "no-console": 0,
    "no-useless-escape": 0,
    "no-unused-vars": 0,
    "semi": [2, "always"],
    "indent": ["error", 2, {"SwitchCase": 1}],
    "prettier/prettier": 0,
    "prefer-const": 0,
    "jsdoc/require-returns-description": 0,
    "eqeqeq": 0
  },
  "overrides": [
    {
      "files": [
        "./blocks/**/*.js"
      ]
    }
  ]
}
